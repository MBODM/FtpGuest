@model BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.AppName @Model.AppVersion</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site/CSS/Common.css" rel="stylesheet" type="text/css" />
    @RenderSection("ViewStyles", false)
    <script src="~/Scripts/jquery-2.2.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Site/Common.js" type="text/javascript"></script>
    @RenderSection("ViewScripts", false)
</head>
<body>
    <div class="header">
        <img src="~/Content/Site/Images/@RenderSection("HeaderImage", true)" /><h1>@RenderSection("HeaderText", true)</h1>
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
