@model BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.AppName @Model.AppVersion</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/site/css/site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    <script src="~/Scripts/jquery-3.0.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/site/site.js" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <div id="header">
        <img src="~/Content/site/images/@ViewBag.HeaderImage" /><h1>@ViewBag.HeaderTitle</h1>
    </div>
    @if (Model.HasBackButton)
    {
        <div id="back">@Html.ActionLink("Zurück", "Index", "Home")</div>
    }
    <div id="content">
        @RenderBody()
    </div>
</body>
</html>
